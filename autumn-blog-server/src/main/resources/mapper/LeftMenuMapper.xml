<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.autumn.dao.LeftMenuMapper">

    <sql id="filedAll">
        id, name, menu_router, active, hide, menu_type, component_name, parent_id,
        icon, remarks, permission_name, permission_mark, permission_details,
        create_author, update_author, create_time, update_time
    </sql>

    <resultMap id="findAll" type="com.autumn.pojo.LeftMenu">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="menu_router" property="menuRouter"/>
        <result column="active" property="active"/>
        <result column="hide" property="hide"/>
        <result column="menu_type" property="menuType"/>
        <result column="component_name" property="componentName"/>
        <result column="parent_id" property="parentId"/>
        <result column="icon" property="icon"/>
        <result column="remarks" property="remarks"/>
        <result column="permission_name" property="permissionName"/>
        <result column="permission_mark" property="permissionMark"/>
        <result column="permission_details" property="permissionDetails"/>
        <result column="create_author" property="createAuthor"/>
        <result column="update_author" property="updateAuthor"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <select id="findAllMenuByRoleIds" resultMap="findAll">
        select
        <include refid="filedAll"/>
        from left_menu
        WHERE id in (SELECT menu_id FROM role_menu WHERE role_id in
        <foreach collection="roleIds" item="roleId" open="(" close=")" separator=",">
            #{roleId}
        </foreach>)
    </select>
</mapper>