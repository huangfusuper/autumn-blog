<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.autumn.dao.PermissionMapper">

    <sql id="filedAll">
        id, name, details, mark_name, create_time, update_time, type
    </sql>

    <resultMap id="findAll" type="com.autumn.pojo.Permission">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="markName" column="mark_name"/>
        <result property="details" column="details"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
        <result property="type" column="type"/>
    </resultMap>

    <select id="findAllPermissionByRoleIds" resultMap="findAll">
        SELECT <include refid="filedAll"/> from permission
        WHERE id in (SELECT permission_id FROM role_permission WHERE role_id in
            <foreach collection="roleIds" item="roleId" open="(" close=")" separator=",">
                #{roleId}
            </foreach>)
    </select>
</mapper>